{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "laravel/livewire-starter-kit",
    "type": "project",
    "description": "The official Laravel starter kit for Livewire.",
    "keywords": [
        "laravel",
        "framework"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.2",
        "barryvdh/laravel-dompdf": "^3.1",
        "brick/money": "^0.10.0",
        "brick/phonenumber": "^0.6.0",
        "dasundev/livewire-dropzone": "^2.0",
        "doctrine/dbal": "^4.2",
        "dompdf/dompdf": "^3.1",
        "guzzlehttp/guzzle": "^7.9",
        "inertiajs/inertia-laravel": "^2.0.2",
        "intervention/image": "^2.0",
        "jenssegers/agent": "^2.6",
        "laravel/framework": "^12.8",
        "laravel/octane": "^2.6",
        "laravel/pulse": "^1.4",
        "laravel/sanctum": "*",
        "laravel/tinker": "^2.10.1",
        "livewire/livewire": "^3.5",
        "maatwebsite/excel": "^3.1",
        "mhmiton/laravel-modules-livewire": "^5.1",
        "nwidart/laravel-modules": "^12.0.3",
        "opcodesio/log-viewer": "^3.17",
        "spatie/laravel-analytics": "^5.6",
        "spatie/laravel-permission": "^6.16",
        "spatie/laravel-sitemap": "^7.3",
        "spatie/temporary-directory": "^2.3",
        "stichoza/google-translate-php": "^5.3",
        "stripe/stripe-php": "^16.2",
        "whitecube/php-prices": "^1.2"
    },
    "require-dev": {
        "barryvdh/laravel-debugbar": "^3.14",
        "fakerphp/faker": "^1.24.1",
        "laravel/pail": "^1.2.2",
        "laravel/pint": "^1.22.0",
        "laravel/sail": "^1.41",
        "mockery/mockery": "^1.6.12",
        "nunomaduro/collision": "^8.8.0",
        "pestphp/pest-plugin-stressless": "^3.0",
        "phpunit/phpunit": "^11.3"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/",
            "Modules\\": "Modules/"
        },
        "files": [
            "app/Helpers/CommonHelper.php",
            "app/Helpers/DateHelper.php",
            "app/Helpers/NumberHelper.php",
            "app/Helpers/StringHelper.php",
            "app/Helpers/TimeHelper.php",
            "app/Helpers/UserHelper.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
            "@php artisan migrate --graceful --ansi"
        ],
        "dev": [
            "Composer\\Config::disableProcessTimeout",
            "npx concurrently -c \"#93c5fd,#c4b5fd,#fb7185,#fdba74\" \"php artisan serve\" \"php artisan queue:listen --tries=1\" \"php artisan pail --timeout=0\" \"npm run dev\" --names=server,queue,logs,vite"
        ],
        "test": [
            "@php artisan config:clear --ansi",
            "@php artisan test"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true,
            "wikimedia/composer-merge-plugin": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}